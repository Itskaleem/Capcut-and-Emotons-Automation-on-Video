# Video Processing Configuration

# Input Configuration
INPUT_SOURCE=https://www.youtube.com/watch?v=_d105xBlsEw

# Output Configuration
OUTPUT_FOLDER=output
CAPCUT_PROJECTS_FOLDER=capcut_projects
FINAL_VIDEO_NAME=final_output.mp4

# Video Processing Settings
DOWNLOAD_VIDEO=true
MAX_VIDEO_HEIGHT=720
OUTPUT_FPS=24
VIDEO_CODEC=libx264
AUDIO_CODEC=aac

# Transcription Settings
VOSK_MODEL_PATH=models/vosk-model-small-en-us-0.15
SAMPLE_RATE=16000

# Semantic Chunking Settings
ENABLE_SEMANTIC_CHUNKING=true
SIMILARITY_THRESHOLD=0.7
MAX_SENTENCES_PER_CHUNK=5
MAX_PAUSE_GAP=1.5
MAX_WORDS_PER_SENTENCE=15

# Emotion Classification Settings
ENABLE_ADVANCED_EMOTIONS=true
EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Visual Settings
VIDEO_WIDTH=1280
VIDEO_HEIGHT=720
BACKGROUND_COLOR=20,20,20
FONT_NAME=Arial
SUBTITLE_FONT_SIZE=36
# Icon size as percentage of video height (e.g., 0.12 = 12% of height)
ICON_SIZE_RATIO=0.12
ICON_POSITION_X=50
SUBTITLE_BACKGROUND_OPACITY=0.8

# Icon Folder
ICONS_FOLDER=icons

# Advanced Settings
THREADS=4
KEEP_INTERMEDIATE_FILES=false
VERBOSE_LOGGING=true
